{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "models/*": ["./src/models/*"],
      "services/*": ["./src/services/*"],
      "typings/*": ["./src/typings/*"],
      "constants/*": ["./src/constants/*"],
      "controllers/*": ["./src/controllers/*"],
      "utils/*": ["./src/utils/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "helpers/*": ["./src/helpers/*"],
      "validators/*": ["./src/validators/*"],
      "tst/*": ["./testing/*"]
    },

    "strict": true,
    "skipLibCheck": true
  }
}
